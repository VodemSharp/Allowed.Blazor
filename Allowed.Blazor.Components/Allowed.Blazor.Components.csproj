<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Version>1.3.1</Version>
    <Company>Allowed Inc.</Company>
    <Authors>VodemSharp</Authors>
    <Product>AllowedSharp</Product>
    <Description>Blazor components based on bootstrap styles.</Description>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <PackageId>Allowed.Blazor.Components</PackageId>
    <RepositoryUrl>https://github.com/VodemSharp/Allowed.Blazor</RepositoryUrl>
    <PackageVersion>1.4.0</PackageVersion>
  </PropertyGroup>

  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Images\" />
    <Folder Include="wwwroot\img\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Images\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
